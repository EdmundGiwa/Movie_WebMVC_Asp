@model MovieTemplate.Models.MovieDets


@{
    ViewBag.Title = "Index";
}

<style>
 .contact{
     padding:4%;
     height:40%;
     background:linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url(../../image/art_sky.jpg);
 }
 .col-md-3{
     background:#10161f;
     padding:4%;
     border-top-left-radius: 0.5rem;
     border-bottom-left-radius:0.5rem;
 }
 .contact-info{
     margin-top:10%;
 }
 .contact-info img{
     margin-bottom:25%;
     transform:translate(-10%,20%);
 }
 .contact-info h2{
      font-size:19px;
     margin-bottom:5%;
      transform:translate(30%,-50%);
 }
 .col-md-9{
     background:#f4f4f4;
     padding:7.2%;
     border-top-right-radius:0.5rem;
     border-bottom-right-radius:0.5rem;

 }
 .contact-form label{
     font-weight:600;
 }
 .contact-form button{
     background:#25274d;
     color:#fff;
     font-weight:600;
     width:25%;
 }
 .contact-form button:focus{
     box-shadow:none;
 }
 .btn{
     margin-top:15px !important;
 }
 .btn button{
     width:200px;
 }
 .form-group{
     margin-top:20px !important;
 }
 .dur{
     margin-top:200px;
 }
 h2{
     font-family:segoe ui light;
 }
  h4{
     font-family:segoe ui light;
 }
  label{
      color:#10161f;
      font-family:segoe ui light;
  }

</style>

<div class="contact">

    <div class="row">
        <div class="col-md-3">
            <div class="contact-info">
                <img src="~/image/logo.png"/>
                <h2>Add Movie</h2>
            </div>
        </div>
        <form action="Index" method="post">
        <div class="col-md-9">
            <div class="contact-form">
                <div class="form-group">
                    <label class="control-label col-sm-2" for="movieName">Movie Name</label> 
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="movieName" name="movie_name" placeholder="Enter Movie Name" required/>
                    </div>
                </div>
                <div class="form-group m_top">
                    <label class="control-label col-sm-2" for="director">Director</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="director" name="director" placeholder="Enter Director" required />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="producer">Producer</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="producer" name="producer" placeholder="Enter Producer"  required/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="cast">Cast</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="cast" name="cast" placeholder="Enter Cast" required/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="genre">Genre</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="genre" name="genre" placeholder="Enter Genre" required/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="duration">Duration</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="duration" name="duration" placeholder="Enter Duration" required />
                    </div>
                </div>
                <div class="container btn">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-default">Add</button>
                    </div>
                </div>
            </div>
        </div>
        </form>
    </div>

</div>

